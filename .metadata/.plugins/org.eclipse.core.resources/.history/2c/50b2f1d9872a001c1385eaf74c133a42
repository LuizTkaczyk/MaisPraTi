package poo10;

public class Calculadora {

	public static double exec(double n1, double n2, String op) {
		
		double res = 0 ; 
		
		if(op.equals("+")) {
			res = n1 + n2;
		}
		
		if(op.equals("-")) {
			res = n1- n2;
		}
		if(op.equals("*")) {
			res = n1 * n2;
		}
		if(op.equals("/")) {
			res = n1 / n2;
		}
		
		return res;
	}

}
